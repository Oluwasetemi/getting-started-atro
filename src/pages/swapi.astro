---
// Example: Astro component scripts run at build time
const response = await fetch('https://swapi.dev/api/people/1');
const data = await response.json();
// console.log(data);
---
<!-- Output the result to the page -->
<div>{JSON.stringify(data)}</div>
<div>
  <h2>{data.name}</h2>
  <p>{data.birth_year}</p>
  <p>{data.mass}</p>
  <p>{data.height}</p>
  <p>{data.hair_color}</p>
  <p>{data.skin_color}</p>
  <p>{data.eye_color}</p>
  <p>{data.gender}</p>
  <p>{data.homeworld}</p>
  <p>{data.films.length}</p>
  <div>
    films:<p>{data.films.map(
      film => <p>{film}</p>
    )}</p>
  </div>
  <p>{data.starships.length}</p>
  <div>
    starships:<p>{data.starships.map(
      film => <p>{film}</p>
    )}</p>
  </div>
  <p>Vehicle Length: {data.vehicles.length}</p>
  <div>
    vehicle:<p>{data.vehicles.map(
      film => <p>{film}</p>
    )}</p>
  </div>
  <p>created: {data.created}</p>
  <p>edited: {data.edited}</p>
  <p>url: {data.url}</p>
</div>
